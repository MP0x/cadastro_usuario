try:
    import mp3fundo
    from funcoes_cadastro import cadastrar, menu, alterar_idade, alterar_nome, exibir_lista, deletar_usuario
    from funcoes_login import consulta_usuario
    from time import sleep
    import os
    os.system('color a')
    os.system('cls')
    while consulta_usuario() == True:
        sleep(0.15)
        os.system('cls')
        while True:
            x = menu()
            if x == 1:
                cadastrar()
            elif x == 2:
                alterar_idade()
            elif x == 3:
                alterar_nome()
            elif x == 4:
                exibir_lista()
            elif x == 5:
                deletar_usuario()
            elif x == 0:
                print()
                print('OBRIGADO POR UTILIZAR NOSSOS SERVIÃ‡OS !! VOLTE SEMPRE !!')
                break
            else:
                menu()

except ImportError as erro:
    print(erro)
